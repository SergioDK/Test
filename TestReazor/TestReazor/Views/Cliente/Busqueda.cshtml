@model List<TestReazor.ViewModel.ClienteViewModel>

<h2>Busqueda</h2>

<table class="table-bordered">
      <thead>
          <tr>
              <th>Apellido</th>
              <th>Nombre</th>
              <th></th>
              <th></th>
              <th></th>
          </tr>
      </thead>
   <tbody>
       @foreach (var cliente in Model)
       {
           <tr>
               <td>@cliente.Apellido</td>
               <td>@cliente.Nombre</td>
               <td>@Html.ActionLink("Eliminar","EliminarPorApyNom", new { apellido = @cliente.Apellido, nombre = @cliente.Nombre })</td>
               <td>@Html.ActionLink("Eliminar", "EliminarPorId", new { id = cliente.Id })</td>
               <td>@Html.ActionLink("Modificar", "Detalle", new { id = cliente.Id })</td>
           </tr>
       }
   </tbody>
</table>

