@model TestReazor.ViewModel.ProductoViewModel

@{
    ViewBag.Title = "Detalle";
}

<h2>Detalle</h2>

@using (Html.BeginForm("Modificar", "Producto"))
{
    @Html.EditorFor(x => x.Nombre)
    @Html.EditorFor(x => x.Precio)
    @Html.EditorFor(x => x.Cantidad)
    @Html.Hidden("Id", Model.Id)
    <input type="submit" value="Modificar" />
}

